<Context>
	<Resource 
	name="jdbc/MySQLDB"
   	auth="Container"
  	type="javax.sql.DataSource"
  	username="java"
   	password="java"
   	driverClassName="com.mysql.cj.jdbc.Driver"
   	factory="org.apache.tomcat.dbcp.dbcp2.BasicDataSourceFactory"
   	url="jdbc:mysql://localhost:3306/testdb"
   	maxActive="500" 
   	maxIdle="100"
   	maxWait="1000"/>
</Context>
